{
  "name": "workflow-agent-extension",
  "displayName": "Workflow Agent",
  "description": "VS Code extension for building AI-assisted application workflows.",
  "publisher": "workflow",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:workflowAgent.openWorkflowCanvas",
    "onCommand:workflowAgent.runWorkflow",
    "onChatParticipant:workflowAgent"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "workflowAgent.openWorkflowCanvas",
        "title": "Workflow Agent: Open Workflow Canvas"
      },
      {
        "command": "workflowAgent.runWorkflow",
        "title": "Workflow Agent: Run Workflow"
      }
    ],
    "chatParticipants": [
      {
        "id": "workflowAgent",
        "name": "workflowAgent",
        "title": "Workflow Agent"
      }
    ],
    "slashCommands": [
      {
        "command": "workflowAgent.new",
        "title": "Yeni boş workflow oluştur"
      },
      {
        "command": "workflowAgent.addNode",
        "title": "Yeni node ekle",
        "detail": "/add node LoginForm|LoginAPI [Id]"
      },
      {
        "command": "workflowAgent.connect",
        "title": "İki node'u bağla",
        "detail": "/connect <kaynakId> <hedefId>"
      },
      {
        "command": "workflowAgent.rules",
        "title": "Kuralları ayarla",
        "detail": "/rules language ts|js"
      },
      {
        "command": "workflowAgent.run",
        "title": "Workflow'u çalıştır"
      }
    ]
  },
  "scripts": {
    "build": "npm run compile",
    "compile": "tsc -p ./tsconfig.json",
    "lint": "eslint \"./src/**/*.ts\"",
    "watch": "tsc -w -p ./tsconfig.json"
  },
  "devDependencies": {
    "@types/node": "^20.11.7",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  }
}
