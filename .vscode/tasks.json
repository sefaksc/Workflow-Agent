{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build workflow agent extension",
      "type": "shell",
      "command": "npm run build --workspace workflow-agent-extension",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "watch workflow agent extension",
      "type": "shell",
      "command": "npm run watch --workspace workflow-agent-extension",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [
        "$tsc-watch"
      ]
    }
  ]
}
